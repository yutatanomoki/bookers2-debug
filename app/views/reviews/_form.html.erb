<p class="is-size-4 mb-3">レビューを書く</p>

<div class="rating-box" mt-3>
    <%= form_with model: review, url book_reviews_path(book), local: true do |f| %>
        <div class="main-rating">
            <div class="ratings mb-3">
                <span class="fa fa-star-o" id="star"></span>
                <span class="fa fa-star-o" id="star"></span>
                <span class="fa fa-star-o" id="star"></span>
                <span class="fa fa-star-o" id="star"></span>
                <span class="fa fa-star-o" id="star"></span>
            </div>
          <div classs="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
        </div>
        <%= f.hidden_fild :book_id, value: book.id %>
        <%= f.hidden_fild :score, id: "rating-value" %>
        <%= f.text_filed :content, class: "textarea" %>
        <%= f.submit "保存", class: "button mt-3" %>
        <%= link_to "他のレビューを見る",book_reviews_path(book), class: "button light ml-3 mt-3"  %>
    <% end %>
</div>