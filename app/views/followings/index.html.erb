<h2>Follows User</h2>

<% @followings.each do |following| %>
  <table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
          <th colspan="3"></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <td><%= attachment_image_tag(following, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
            <td><%= following.name %></td>
            <td><%= "フォロー数#{following.followings.count}" %></td>
            <td><%= "フォロワー数#{following.followers.count}" %></td>
            <td><%= link_to 'Show', user_path(following) %></td>
          </tr>
      </tbody>
 </table>
<% end %>